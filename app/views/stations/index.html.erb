<p id="notice"><%= notice %></p>

<% if @region %>
<%= link_to @region.name, @region %>
<% end %>
<h1>Stations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Region</th>
      <th>No</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.code %></td>
        <td><%= station.name %></td>
        <td><%= station.region.name %></td>
        <td><%= station.no %></td>
        <td><%= station.address %></td>
        <td>
          <%= link_to 'measures', station_measures_path(station) %>
          <%= link_to 'Show', station %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Station', new_station_path %>
