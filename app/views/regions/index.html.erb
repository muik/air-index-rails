<p id="notice"><%= notice %></p>

<h1>Regions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>No</th>
      <th>Station code</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.code %></td>
        <td><%= region.name %></td>
        <td><%= region.no %></td>
        <td><%= region.station_code %></td>
        <td>
          <%= link_to 'stations', region_stations_path(region) %>
          <%= link_to 'Show', region %></td>
      </tr>
    <% end %>
  </tbody>
</table>
